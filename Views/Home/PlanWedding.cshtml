@model Wedding

<div id="plan">
    <div class="topsection">
        <h1>Plan Your Wedding</h1>
        <h3><a href="~/logout">Log Out</a></h3>
        <h3><a href="~/dashboard">Dashboard</a></h3>
    </div>
    <div class="side">
        <form asp-action="AddWedding" asp-controller="Home" method="post" class="planform">
            <div class="form-group row">
                <label class="col-sm-2 col-form-label">Wedder One:</label>
                <span asp-validation-for="WedderOne" style="color:red;"></span>
                <div class="col-sm-10">
                    <input type="text" class="form-control" asp-for="WedderOne">
                </div>
            </div>
            <div class="form-group row">
                <label class="col-sm-2 col-form-label">Wedder Two:</label>
                <span asp-validation-for="WedderTwo" style="color:red;"></span>
                <div class="col-sm-10">
                    <input type="text" class="form-control" asp-for="WedderTwo">
                </div>
            </div>
            <div class="form-group row">
                <label class="col-sm-2 col-form-label">Date:</label>
                <span asp-validation-for="Date" style="color:red;"></span>
                <div class="col-sm-10">
                    <input type="date" class="form-control" asp-for="Date">
                </div>
            </div>
            <div class="form-group row">
                <label class="col-sm-2 col-form-label">Wedding Address:</label>
                <span asp-validation-for="Address" style="color:red;"></span>
                <div class="col-sm-10">
                    <input type="text" class="form-control" asp-for="Address">
                </div>
            </div>
            <button type="submit" class="btn btn-primary">Create</button>
        </form>
    </div>
</div>